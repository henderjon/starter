
	# force https-redirects
	if ($scheme = http) {
		return 301 https://$server_name$request_uri;
	}

	# mkcert
	ssl_certificate /etc/nginx/ssl-cert/cert.pem;
	ssl_certificate_key /etc/nginx/ssl-cert/cert-key.pem;

	proxy_ssl_certificate /etc/nginx/ssl-cert/cert.pem;
	proxy_ssl_certificate_key /etc/nginx/ssl-cert/cert-key.pem;
